{% extends "admin/layout.twig" %}

{% block content %}

<!-- Main content -->
<div class="content-wrapper">

<!-- Page header -->
<div class="page-header page-header-default ">
<div class="page-header-content">

<div class="page-title">
<h1> <span class="text-semibold"><i class="icon-arrow-right6 position-left goback"></i>
احصائيات المنتوجات
</span></h1>
</div>


<div class="heading-elements stastsForm">
    <form class="heading-form" id="form-stats-From-To" autocomplete="off" method="GET" action="{{pages.revenue}}">
        <div class="col-md-5">
        <div class="form-group">
            <label for="">التاريخ من</label>
            <input type="text" name="from" placeholder="التاريخ من" class="form-control" value="{{date_from}}" id="datepickerFrom">
        </div>
        </div>

        <div class="col-md-5">
            <div class="form-group">
                <label for="">التاريخ إلى</label>
                <input type="text" name="to" placeholder="التاريخ الى" class="form-control" value="{{date_to}}"  id="datepickerTo">
            </div>
            </div>
        <div class="col-md-1">
        <div class="form-group">
            <button class="btn btn-success" type="submit">
                <i class="icon-search4"></i></button></div>
        </div>
    </form>
</div>

</div>


</div>
<!-- /page header -->



<!-- Content area -->
<div class="content">


<style>
   .date_row {
        background: #4caf50 !important;
        color: white;
        border: 0 !important;
    }
</style>
<div class="panel panel-flat responsive-panel">
<table class="table table-striped bawaba-tables" >
    <thead>
        <tr>
            <th><b>  المنتوج </b></th>
            <th><b> مجموع الطلبات  </b></th>
            <th><b> طلبات تم تزويعها  </b></th>
            <th><b>  الكمية   </b></th>
            <th><b> الكمية التي تم توزيعها </b></th>
            <th><b> نسبة الطلبات     </b></th>
            <th><b>  نسبة الكمية    </b></th>
        </tr>
    </thead>
    <tbody>



    <tr class="date_row">
        <td colspan="7">{{date_from}} - {{date_to}}</td>
    </tr>


    {% for product in data %}
    <tr>
        <td>{{product.name}}</td>
        <td>{{product.total_orders}}</td>
        <td>{{product.delivred_orders}}</td>
        <td>{{product.total_quantity}}</td>
        <td>{{product.delivred_quantity}}</td>
        <td>{{product.percentOrders}}</td>
        <td>{{product.percentQuantity}}</td>
    </tr>
    {% endfor %}       

    </tbody>
</table>

</div>
</div>
</div>
{% endblock %}
